 <% @order.line_items.each do |item| %>
  <% product = @product.find_by_id(item.product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
    </td>
    <td>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      $<%= product.price %>
    </td>
  </tr>
  <tr>

  </tr>
<% end %>



