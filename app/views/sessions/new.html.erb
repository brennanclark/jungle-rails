<!-- app/views/sessions/new.html.erb -->
<p id=”alert”><%= alert %></p>
<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class=”field”>
    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>

  </div>

  <div class="actions">
    <%= submit_tag "Submit" %>
  </div>

<% end %>